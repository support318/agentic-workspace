# API Keys and Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# GoHighLevel (GHL) API
GHL_API_TOKEN=your_ghl_api_token_here
GHL_LOCATION_ID=your_location_id_here

# Google Calendar
GOOGLE_CALENDAR_ID=support@candidstudios.net
GOOGLE_CREDENTIALS_PATH=path/to/credentials.json

# Anthropic Claude API
ANTHROPIC_API_KEY=your_key_here

# OpenAI (optional)
OPENAI_API_KEY=your_key_here

# Google (optional)
GOOGLE_API_KEY=your_key_here
GOOGLE_CREDENTIALS_PATH=path/to/credentials.json

# Email Services
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
# Use App Specific Password: https://support.google.com/accounts/answer/185833
SMTP_APP_PASSWORD=your_app_password_here

# Apify (for scraping)
APIFY_API_KEY=your_apify_key_here

# Apollo.io (optional)
APOLLO_API_KEY=your_apollo_key_here

# Google Sheets
GOOGLE_SHEETS_CREDENTIALS_PATH=path/to/credentials.json

# ClickUp (optional)
CLICKUP_API_KEY=your_clickup_key_here
CLICKUP_TEAM_ID=your_team_id_here

# Slack (for notifications)
SLACK_WEBHOOK_URL=your_webhook_url_here

# Webhook Server
PORT=8080
DEBUG=False
WEBHOOK_SECRET=your_webhook_secret_here
ALLOWED_IPS=127.0.0.1,webhook.gohighlevel.com

# Email Processor (IMAP)
IMAP_EMAIL=support@candidstudios.net
# Use App Specific Password: https://support.google.com/accounts/answer/185833
IMAP_APP_PASSWORD=your_google_app_password_here
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993

# AI Extraction Configuration
EXTRACTION_MODEL=claude-3-5-sonnet-20241022

# Email Processor Settings
EMAIL_PROCESSOR_CHECK_INTERVAL=60
EMAIL_PROCESSOR_LOG_LEVEL=INFO
